{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "typeRoots": ["./src/types", "./node_modules/@types", "./quartz_repo/node_modules/@types"],
    "paths": {
      "shiki": ["./quartz_repo/node_modules/shiki"],
      "rehype-pretty-code": ["./quartz_repo/node_modules/rehype-pretty-code"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
